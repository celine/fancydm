<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/gallery_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preview_size"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/gallery_sidebar"
        android:layout_width="@dimen/preview_size"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <FrameLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gallery_header"
        android:layout_toRightOf="@id/gallery_sidebar" />

</RelativeLayout>